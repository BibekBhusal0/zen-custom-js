[
  {
    "type": "text",
    "label": "Configure the behavior of the command palette. All changes real time (no need to restart)"
  },
  {
    "type": "separator",
    "label": "General Behavior",
    "margin": "25px 0 15px 0"
  },


  {
    "type": "dropdown",
    "value": "number",
    "property": "browser.urlbar.maxRichResults",
    "label": "The number of search suggestions",
    "default": 1,
    "placeholder": false,
    "options": [
      { "label": "5", "value": 5 },
      { "label": "6", "value": 6 },
      { "label": "7", "value": 7 },
      { "label": "8", "value": 8 },
      { "label": "9", "value": 9 },
      { "label": "10", "value": 10 },
      { "label": "12", "value": 12 }
    ]
  },
  {
    "type": "separator",
    "label": "Dynamic Commands",
    "margin": "25px 0 15px 0"
  },
  {
    "type": "checkbox",
    "property": "zen-command-palette.dynamic.search-engines",
    "label": "Enable Search Engine commands",
    "default": true
  },
  {
    "type": "checkbox",
    "property": "zen-command-palette.dynamic.extensions",
    "label": "Enable Extension Options commands",
    "default": false
  },
  {
    "type": "checkbox",
    "property": "zen-command-palette.dynamic.workspaces",
    "label": "Enable Workspace commands",
    "default": false
  },
  {
    "type": "checkbox",
    "property": "zen-command-palette.dynamic.folders",
    "label": "Enable Folder Management commands",
    "default": true
  },
  {
    "type": "checkbox",
    "property": "zen-command-palette.dynamic.sine-mods",
    "label": "Enable Sine Mod Management commands",
    "default": true
  },
  {
    "type": "checkbox",
    "property": "zen-command-palette.dynamic.container-tabs",
    "label": "Enable Container Tab commands",
    "default": false
  },
  {
    "type": "checkbox",
    "property": "zen-command-palette.dynamic.active-tabs",
    "label": "Enable Active Tab switching commands",
    "default": false
  },
  {
    "type": "checkbox",
    "property": "zen-command-palette.dynamic.unload-tab",
    "label": "Enable Active Tab unloading commands",
    "default": false
  },
  {
    "type": "checkbox",
    "property": "zen-command-palette.dynamic.extension-enable-disable",
    "label": "Enable Extension Enable/Disable commands",
    "default": false
  },
  {
    "type": "checkbox",
    "property": "zen-command-palette.dynamic.extension-uninstall",
    "label": "Enable Extension Uninstall commands",
    "default": false
  },
  {
    "type": "checkbox",
    "property": "zen-command-palette.dynamic.about-pages",
    "label": "Enable `about:` page commands",
    "default": false
  },
  {
    "type": "separator",
    "label": "Development",
    "margin": "25px 0 15px 0"
  },
  {
    "type": "checkbox",
    "property": "zen-command-palette.debug-mode",
    "label": "Enable debug logging in Browser Console",
    "default": false
  }
]
