[
  {
    "property": "extension.findbar-ai.enabled",
    "label": "Enable Findbar AI",
    "type": "checkbox",
    "default": true,
    "description": "Globally enables or disables the AI-powered findbar."
  },
  {
    "type": "separator",
    "id": "findbar-ai-api-separator",
    "label": "API Configuration",
    "conditions": [
      {
        "if": {
          "property": "extension.findbar-ai.enabled",
          "value": true
        }
      }
    ]
  },
  {
    "property": "extension.findbar-ai.llm-provider",
    "label": "AI Provider",
    "type": "dropdown",
    "default": "gemini",
    "description": "Select the AI service provider to use.",
    "options": [
      {
        "value": "gemini",
        "label": "Google Gemini"
      },
      {
        "value": "mistral",
        "label": "Mistral AI"
      }
    ],
    "conditions": [
      {
        "if": {
          "property": "extension.findbar-ai.enabled",
          "value": true
        }
      }
    ]
  },
  {
    "property": "extension.findbar-ai.gemini-api-key",
    "label": "Gemini API Key",
    "type": "string",
    "placeholder": "Enter your Google Gemini API key",
    "default": "",
    "description": "Your personal API key from Google AI Studio. Required to use Gemini models.",
    "conditions": [
      {
        "if": {
          "property": "extension.findbar-ai.enabled",
          "value": true
        }
      },
      {
        "if": {
          "property": "extension.findbar-ai.llm-provider",
          "value": "gemini"
        }
      }
    ],
    "operator": "AND"
  },
  {
    "property": "extension.findbar-ai.gemini-model",
    "label": "Gemini Model",
    "type": "dropdown",
    "default": "gemini-1.5-flash",
    "description": "Select the Gemini model to use for chat responses.",
    "options": [
      {
        "value": "gemini-2.5-pro",
        "label": "Gemini 2.5 Pro"
      },
      {
        "value": "gemini-2.5-flash",
        "label": "Gemini 2.5 Flash"
      },
      {
        "value": "gemini-2.0-flash",
        "label": "Gemini 2.0 Flash"
      },
      {
        "value": "gemini-2.0-flash-lite",
        "label": "Gemini 2.0 Flash Lite"
      },
      {
        "value": "gemini-1.5-pro",
        "label": "Gemini 1.5 Pro"
      },
      {
        "value": "gemini-1.5-flash",
        "label": "Gemini 1.5 Flash"
      },
      {
        "value": "gemini-1.5-flash-8b",
        "label": "Gemini 1.5 Flash 8B"
      }
    ],
    "conditions": [
      {
        "if": {
          "property": "extension.findbar-ai.enabled",
          "value": true
        }
      },
      {
        "if": {
          "property": "extension.findbar-ai.llm-provider",
          "value": "gemini"
        }
      }
    ],
    "operator": "AND"
  },
  {
    "property": "extension.findbar-ai.mistral-api-key",
    "label": "Mistral API Key",
    "type": "string",
    "placeholder": "Enter your Mistral API key",
    "default": "",
    "description": "Your personal API key from Mistral AI. Required to use Mistral models.",
    "conditions": [
      {
        "if": {
          "property": "extension.findbar-ai.enabled",
          "value": true
        }
      },
      {
        "if": {
          "property": "extension.findbar-ai.llm-provider",
          "value": "mistral"
        }
      }
    ],
    "operator": "AND"
  },
  {
    "property": "extension.findbar-ai.mistral-model",
    "label": "Mistral Model",
    "type": "dropdown",
    "default": "mistral-medium-latest",
    "description": "Select the Mistral model to use.",
    "options": [
      {
        "value": "mistral-small",
        "label": "Mistral Small"
      },
      {
        "value": "mistral-medium-latest",
        "label": "Mistral Medium (Latest)"
      },
      {
        "value": "mistral-large-latest",
        "label": "Mistral Large (Latest)"
      },
      {
        "value": "pixtral-large-latest",
        "label": "Pixtral Large (Latest)"
      }
    ],
    "conditions": [
      {
        "if": {
          "property": "extension.findbar-ai.enabled",
          "value": true
        }
      },
      {
        "if": {
          "property": "extension.findbar-ai.llm-provider",
          "value": "mistral"
        }
      }
    ],
    "operator": "AND"
  },
  {
    "type": "separator",
    "id": "findbar-ai-response-separator",
    "label": "AI Response",
    "conditions": [
      {
        "if": {
          "property": "extension.findbar-ai.enabled",
          "value": true
        }
      }
    ]
  },
  {
    "property": "extension.findbar-ai.citations-enabled",
    "label": "Citations (*EXPERIMENTAL*)",
    "type": "checkbox",
    "default": false,
    "description": "The AI will provide a link in its response pointing to the source text on the page.",
    "conditions": [
      {
        "if": {
          "property": "extension.findbar-ai.enabled",
          "value": true
        }
      }
    ]
  },
  {
    "property": "extension.findbar-ai.god-mode",
    "label": "God Mode (Enable Tools)",
    "type": "checkbox",
    "default": false,
    "description": "Allows the AI to use tools, such as performing searches or opening links.",
    "conditions": [
      {
        "if": {
          "property": "extension.findbar-ai.enabled",
          "value": true
        }
      }
    ]
  },
  {
    "property": "extension.findbar-ai.conform-before-tool-call",
    "label": "Ask before tool call",
    "type": "checkbox",
    "default": true,
    "description": "If unchecked, AI tools will run automatically without asking for permission.",
    "conditions": [
      {
        "if": {
          "property": "extension.findbar-ai.enabled",
          "value": true
        }
      },
      {
        "if": {
          "property": "extension.findbar-ai.god-mode",
          "value": true
        }
      }
    ],
    "operator": "AND"
  },
  {
    "type": "separator",
    "id": "findbar-ai-appearance-separator",
    "label": "Appearance & Behavior",
    "conditions": [
      {
        "if": {
          "property": "extension.findbar-ai.enabled",
          "value": true
        }
      }
    ]
  },
  {
    "property": "extension.findbar-ai.minimal",
    "label": "Enable Minimal Mode (Arc-style)",
    "type": "checkbox",
    "default": true,
    "conditions": [
      {
        "if": {
          "property": "extension.findbar-ai.enabled",
          "value": true
        }
      }
    ]
  },
  {
    "property": "extension.findbar-ai.persist-chat",
    "label": "Persist Chat History per Tab",
    "type": "checkbox",
    "default": false,
    "description": "Saves the chat history for each tab. History is lost when the browser is closed.",
    "conditions": [
      {
        "if": {
          "property": "extension.findbar-ai.enabled",
          "value": true
        }
      }
    ]
  },
  {
    "property": "extension.findbar-ai.dnd-enabled",
    "label": "Enable Drag & Drop and Resizing",
    "type": "checkbox",
    "default": false,
    "description": "Allows the AI chat panel to be moved around the screen and resized.",
    "conditions": [
      {
        "if": {
          "property": "extension.findbar-ai.enabled",
          "value": true
        }
      }
    ]
  },
  {
    "property": "extension.findbar-ai.position",
    "label": "Snap-to Corner",
    "type": "dropdown",
    "default": "bottom-right",
    "description": "The corner the findbar will snap to after being dragged.",
    "options": [
      {
        "value": "top-left",
        "label": "Top Left"
      },
      {
        "value": "top-right",
        "label": "Top Right"
      },
      {
        "value": "bottom-left",
        "label": "Bottom Left"
      },
      {
        "value": "bottom-right",
        "label": "Bottom Right"
      }
    ],
    "conditions": [
      {
        "if": {
          "property": "extension.findbar-ai.enabled",
          "value": true
        }
      }
    ]
  },
  {
    "type": "separator",
    "id": "findbar-ai-context-menu-separator",
    "label": "Context Menu",
    "conditions": [
      {
        "if": {
          "property": "extension.findbar-ai.enabled",
          "value": true
        }
      }
    ]
  },
  {
    "property": "extension.findbar-ai.context-menu.enabled",
    "label": "Enable Context Menu Item",
    "type": "checkbox",
    "default": true,
    "description": "Adds an 'Ask AI' / 'Summarize with AI' option to the right-click context menu.",
    "conditions": [
      {
        "if": {
          "property": "extension.findbar-ai.enabled",
          "value": true
        }
      }
    ]
  },
  {
    "property": "extension.findbar-ai.context-menu.autosend",
    "label": "Automatically Send Query from Context Menu",
    "type": "checkbox",
    "default": false,
    "description": "If enabled, clicking the context menu item immediately sends the query. If disabled, it only populates the input field.",
    "conditions": [
      {
        "if": {
          "property": "extension.findbar-ai.enabled",
          "value": true
        }
      },
      {
        "if": {
          "property": "extension.findbar-ai.context-menu.enabled",
          "value": true
        }
      }
    ],
    "operator": "AND"
  },
  {
    "type": "separator",
    "id": "findbar-ai-development-separator",
    "label": "Development",
    "conditions": [
      {
        "if": {
          "property": "extension.findbar-ai.enabled",
          "value": true
        }
      }
    ]
  },
  {
    "property": "extension.findbar-ai.debug-mode",
